<!-- Browse -->
<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Artist</th>
      <th>Title</th>
      <th>Medium</th>
      <th>Style</th>
      <th>Size</th>
      <th>Yoc</th>
      <th>Origin country</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.artist_id %></td>
        <td><%= item.title %></td>
        <td><%= item.medium %></td>
        <td><%= item.style %></td>
        <td><%= item.size %></td>
        <td><%= item.yoc %></td>
        <td><%= item.origin_country %></td>
        <td><%= item.artist %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) if current_user && current_user.admin == true%></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.admin == true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
