<!DOCTYPE html>
<html>
  <head>
    <title>Art Collector</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <img src="assets/ArtCollector.png" style="width:320px;">
          </div>
          <div class="col-sm-2">
            <%= link_to "Home", root_path %>
          </div>
          <div class="col-sm-2">
            <%= link_to "Browse", '/items' %>
          </div>
          <% if user_signed_in? %>
            <div class="col-sm-2">
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            </div>
          <% else %>
            <div class="col-sm-2">
              <%= link_to "Sign In", '/signin' %>
            </div>
          <% end %>
          <div class="col-sm-2">
            <%= link_to "Checkout", '/transactions/new' %>
          </div>
        </div>
      </div>
    </header>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    <footer>
      <% if current_user && current_user.admin == true %>
        <%= link_to("Admin", '/admin') %>
      <% end %>
    </footer>
  </body>
</html>
