<!DOCTYPE html>
<html>
  <head>
    <title>Art Collector</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Nixie+One|Oswald" rel="stylesheet">

  </head>

  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <img src="assets/ArtCollector.png" style="width:320px;">
          </div>
          <div class="col-sm-2">
            <%= link_to "Home", root_path %>
          </div>
          <div class="col-sm-2">
            <%= link_to "Browse", '/items' %>
          </div>
          <div class="col-sm-2">
            <%= link_to "Sign In", '/signin' %>
          </div>
          <div class="col-sm-2">
            <%= link_to "Checkout", '/transactions/new' %>
          </div>
        </div>
      </div>
    </header>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    <footer>
      <%= link_to "Admin", '/admin' %>
    </footer>
  </body>
</html>
